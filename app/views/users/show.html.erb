<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h4>投稿数の前日比・前週比</h4>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><p><%= @today %></p></td>
            <td><p><%= @yesterday %></p></td>
            <td><p><%= @day_before_ratio %>%</p></td>
          </tr>
        </tbody>
      </table>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>今週の投稿数</th>
            <th>前週の投稿数</th>
            <th>前週比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><p><%= @this_week %></p></td>
            <td><p><%= @last_week %></p></td>
            <td><p><%= @week_over_week %>%</p></td>
          </tr>
        </tbody>
      </table>
      
      
    </div>
  </div>
</div>